<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorsign"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/card"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@color/colorcampuran">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Contact"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorJudul"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_alignTop="@+id/card"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="77dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/phone"
            android:paddingLeft="80sp"
            android:paddingRight="100sp"
            android:text="Telepon"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/btnTelepon" />
    </LinearLayout>]
    <LinearLayout
        android:layout_alignTop="@+id/line1"
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="73dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/gmail"
            android:paddingLeft="80sp"
            android:paddingRight="100sp"
            android:text="Gmail"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/btnEmail" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignTop="@+id/line2"
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="73dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="80dp"
            android:paddingRight="60sp"
            android:text="Facebook"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/btnFacebook" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignTop="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="73dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/instagram"
            android:paddingLeft="80sp"
            android:paddingRight="60sp"
            android:text="Instagram"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/btnInstagram" />
    </LinearLayout>

</RelativeLayout>